connect () {
clear
su -c 'svc wifi disable' && su -c 'svc data enable' && su -c pm enable $App && su -c pm clear $App && am start -n $App/$atividade && sleep 4 && $A3 && clear
check() {
    vpn=$(ifconfig | grep -c tun0)
    case $vpn in
    0) sleep 2 ; check;;
    1) su -c pm disable $App && su -c mv /data/data/$App/cache/android.conf /storage/emulated/0/Download/$nome.ovpn && echo -e "<auth-user-pass>\nAuth\npassword\n</auth-user-pass>\n--verify-client-cert none\nhttp-proxy paws-tbr-sdgw.datami.net 8043" >> /storage/emulated/0/Download/$nome.ovpn && termux-open /storage/emulated/0/Download/$nome.ovpn --content-type "application/x-openvpn-profile"
    esac
}
check
}
App4(){
clear 
su -c 'svc wifi disable' && su -c 'svc data enable' && su -c pm enable com.conectauneb.reach4all && su -c pm clear com.conectauneb.reach4all && am start -n com.conectauneb.reach4all/com.datami.reachall.SplashScreen && clear
check() {
    vpn=$(ifconfig | grep -c tun0)
    case $vpn in
    0) sleep 2 ; check;;
    1) su -c pm disable com.conectauneb.reach4all && su -c mv /data/data/com.conectauneb.reach4all/cache/android.conf /storage/emulated/0/Download/ConectaUNEB.ovpn && su -c pm clear com.conectauneb.reach4all && echo -e "<auth-user-pass>\nAuth\npassword\n</auth-user-pass>\n--verify-client-cert none\nhttp-proxy eaws-tbr-sdgw.datami.net 8043" >> /storage/emulated/0/Download/ConectaUNEB.ovpn && termux-open /storage/emulated/0/Download/ConectaUNEB.ovpn --content-type "application/x-openvpn-profile" && exit
     esac
}
check
}
