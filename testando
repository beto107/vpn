    echo "             [ 19 ] - Aulas Parana (Conexão Forçada)"
    echo "             [ 20 ] - Applique-se (Conexão Forçada)"  
    echo "             [ 21 ] - ConectaAi (Conexão Forçada)"
    echo "             [ 22 ] - Infantil CMSP (Conexão Forçada)"
    echo "             [ 23 ] - EducaWeb"
    echo "             [ 24 ] - Monteiro Educa+"
    echo "             [ 25 ] - NetEscola"
    echo "             [ 26 ] - Reativar Apps"
